{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "no-namespace": [true, "allow-declarations"],
    "trailing-comma": [
      true,
      "never"
    ],
    "no-bitwise": false,
    "object-literal-shorthand": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
